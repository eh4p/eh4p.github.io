---
import Image from "astro/components/Image.astro";
---

<section id="projects" class="w-full">
  <div class="card border-b-[3px] border-[#1d1d1f0f]">
    <div class="p-6 md:p-10">
      <div
        class="flex flex-col md:flex-row md:justify-between items-center gap-5"
      >
        <div class="flex flex-col w-full">
          <h3 class="mb-5">
            Projects.
            <span class="font-bold opacity-50"
              >Some of my featured projects.</span
            >
          </h3>
          <div class="flex flex-col gap-5">
            <div id="project-1" class="text-xs font-bold">
              <h5>ITI Admission System</h5>
              <p class="opacity-50">
                A Simulator For Information Technology Institute Admission
                System
              </p>
              <p class="opacity-50">ASP.NET Core, Angular, Bootstrap, SASS</p>
              <!-- <p class=""><span class="text-[#622aff]">ASP.NET Core</span>, <span class="text-[#ff2a2a]">Angular</span>, <span class="text-[#c32aff]">Bootstrap</span>, <span class="text-[#ff2a86]">SASS</span></p> -->
              <p class="w-fit">
                <a
                  class="opacity-50 hover:opacity-100 border-b-4 border-b-[#333333] hover:text-[#ff2a2a] hover:border-b-4 hover:border-[#ff2a2a] transition-none"
                  href="https://github.com/eh4p/itiacceptanceprocesssystem_api"
                  >Explore the full project details</a
                >
              </p>
            </div>
            <div id="project-2" class="text-xs font-bold">
              <h5>MSG</h5>
              <p class="opacity-50">Real-time Chat Web Application</p>
              <p class="opacity-50">
                ASP.NET Core, SignalR, Angular, Bootstrap, SASS
              </p>
              <p class="w-fit">
                <a
                  class="opacity-50 hover:opacity-100 border-b-4 border-b-[#333333] hover:text-[#ff2a2a] hover:border-b-4 hover:border-[#ff2a2a] transition-none"
                  href="https://github.com/eh4p/msg_api"
                  >Explore the full project details</a
                >
              </p>
            </div>
            <div id="project-3" class="text-xs font-bold">
              <h5>BuyFlex</h5>
              <p class="opacity-50">E-Commerce Web Application</p>
              <p class="opacity-50">NestJS, NextJS, MongoDB, TailwindCSS</p>
              <p class="w-fit">
                <a
                  class="opacity-50 hover:opacity-100 border-b-4 border-b-[#333333] hover:text-[#ff2a2a] hover:border-b-4 hover:border-[#ff2a2a] transition-none"
                  href="https://github.com/eh4p/buyflex_api"
                  >Explore the full project details</a
                >
              </p>
            </div>
          </div>
        </div>
        <Image
          src="/images/angular-illustration-1.svg"
          width="150"
          height="150"
          alt=""
          class="shrink-0"
        />
      </div>
    </div>
  </div>
</section>
