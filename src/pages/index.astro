<style>
  .animated-gradient {
    background-size: 1000% 1000%;
    background-image: linear-gradient(
      60deg,
      #333333 0%,
      #ff2a2a 25%,
      #333333 50%,
      #622aff 75%,
      #333333 100%
    );
    animation: AnimateGradientWide 15s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  @keyframes AnimateGradientWide {
    0% {
      background-position: 0% 0%;
    }
    25% {
      background-position: 100% 0%;
    }
    50% {
      background-position: 100% 100%;
    }
    75% {
      background-position: 0% 100%;
    }
    100% {
      background-position: 0% 0%;
    }
  }
</style>
