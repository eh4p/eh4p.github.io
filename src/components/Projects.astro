---
import Image from "astro/components/Image.astro";
import ProjectItem from "./ProjectItem.astro";

const projects = [
  {
    title: "ITI Admission System",
    description: "A Simulator For Information Technology Institute Admission System",
    technologies: "ASP.NET Core, Angular, Bootstrap, SASS",
    link: "https://github.com/eh4p/itiacceptanceprocesssystem_api",
    techBadges: [
      { name: "ASP.NET Core", color: "#622aff" },
      { name: "Angular", color: "#ff2a2a" }
    ]
  },
];
---

<section id="projects" class="w-full">
  <div class="card border-b-[3px] border-[#0C08210f]">
    <div class="p-6 md:p-10">
      <div
        class="flex flex-col md:flex-row md:justify-between items-center gap-5"
      >
        <div class="flex flex-col w-full">
          <h3 class="mb-5">
            Projects.
            <span class="font-bold opacity-50 hover:opacity-100 transition-opacity">Some of my featured projects.</span>
          </h3>
          <div class="flex flex-col gap-5">
            {projects.map((project) => (
              <ProjectItem
                title={project.title}
                description={project.description}
                link={project.link}
                techBadges={project.techBadges}
              />
            ))}
          </div>
        </div>
        <Image
          src="/images/angular-illustration-1.svg"
          width="150"
          height="150"
          alt=""
          class="shrink-0"
        />
      </div>
    </div>
  </div>
</section>
